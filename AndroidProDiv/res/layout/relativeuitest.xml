<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView android:id="@+id/txtRelative"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="comments"
              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true"/>
    <EditText android:id="@+id/edtxtRelative"
              android:layout_width="match_parent"
              android:layout_height="170dp"
              android:textSize="18sp"
              android:layout_alignLeft="@+id/txtRelative"
              android:layout_below="@+id/txtRelative"
              android:layout_centerHorizontal="true"/>
    <Button android:id="@+id/btnSave"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_below="@+id/edtxtRelative"
            android:layout_alignRight="@+id/edtxtRelative"/>
    <Button android:id="@+id/btnCancel"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_below="@+id/edtxtRelative"
            android:layout_alignLeft="@+id/edtxtRelative"/>


</RelativeLayout>